<% content_for :dashboard_content do %>
<div class="user-info-section">
  <style>
    form { /*font-family:"Segoe UI";*/ }
    /*form > div {
      display:inline-block;
      width:40%;
    }*/
    .user-info-section h1 {
      /*font-family:"Segoe UI";*/
      font-weight: 300;
      font-size: 33px;
      margin-top: 20px;
      margin-bottom: 20px;
      color: #666;
    }
    .user-info-section label {
      font-weight: 500;
      font-size: 22px;
      margin-top: 10px;
    }
    .user-info-section span.mocklabel {
      font-weight: 500;
      font-size: 22px;
      margin-top: 10px;
    }
    .user-info-section label+br{
      line-height: 30px;
    }
    .user-info-section .label {
      white-space: normal;
      margin-bottom: 10px;
    }
