  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= content_for?(:user_edit_content) ? yield(:user_edit_content) : yield %>
    </div>
  </div>
  <div class="user-info-section">
<% end %>

<%= render template: "users/user_dashboard" %>