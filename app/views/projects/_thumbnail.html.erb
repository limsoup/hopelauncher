<div class="project-partial" style="border: 1px #BBB solid; border-radius:4px; padding:5px;">
	<a href="<%= project_path(project.id) %>">
		<div class="thumbnail" style="background-image:url('<%= project.profile_image_url[/http/] ? project.profile_image_url: ("/assets/"+project.profile_image_url) %>')" >
		</div>
		<div class="caption">
			<h4><%= project.title %></h4>
		</div>
		<p class="desc"><%= project.description ? project.description : 'placeholder'  %></p>
		<br/>
		<!-- <span class="label label-info" style="text-align:left"><%#= project.percent_funded %>% Funded</span><br /><br /> -->
		<div class="progress progress-striped progress-success">
		  <div class="bar" style="width: <%= project.percent_funded %>%;"></div>
		</div>
		<div class="status" style="text-align: center">
			<div class="funded">
				<b><%= project.percent_funded %>%</b><br/>
				<span class="muted small">Funded</span>
			</div>
			<div class="collected">
				<b>$<%= project.collected %></b><br/>
				<span class="muted small">Pledged</span>
			</div>
			<div class="countdown">
				<% if project.end_date #maybe more conditions, or calling some kind of method %>
					<b><%= distance_of_time_in_words(Date.today, project.end_date || (Date.today + 4.weeks))%></b> <span class="muted small">Remaining</span>
				<% else %>
					<b><%= distance_of_time_in_words(project.created_at, Time.now )%></b> <span class="muted small">Elapsed</span>
				<% end %>
			</div>
		</div>
	</a>
</div>