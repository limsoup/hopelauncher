<div class="row-fluid">
	<%= render '/messages/messages_sidebar' %>
	<div class="span9">
		<h1>Conversations List</h1>

		<ul>
		<% @conversations.each do |conv| %>
			<li><%= link_to conv.messages.first.subject, conv %></li>
		<% end %>
		</ul>

		<br/>
		<%= link_to 'New Conversation', new_message_path %>
	</div>
</div>