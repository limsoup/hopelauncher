<div class="container-fluid">
	<div class="row-fluid">

	<div class="span2">
		<ul class="nav nav-pills nav-stacked tiles">
			<li><%= link_to "<i class=\"h-icon-user\" style=\"font-size: 70px;\"></i><br><span>Profile</span></a></li>".html_safe, @user %></li>
			<li class="active"><%= link_to "<i class=\"h-icon-envelop\" style=\"font-size: 70px;\"></i><br><span>Mail</span></a></li>".html_safe, inbox_path %></li>
			<!-- <li><%#= link_to "<i class=\"h-icon-airplane\" style=\"font-size: 70px;\"></i><br><span>Projects</span></a></li>".html_safe, inbox_path %></li> -->
			<li><%= link_to "<i class=\"h-icon-cogs\" style=\"font-size: 70px;\"></i><br><span>Settings</span></a></li>".html_safe, edit_user_registration_path(@user) %></li>
		</ul>
	</div>
	<div class="span10">
		<div class="big-user-square">
			<div class="user-header-section">
				<h1 style="text-align:center"><%= "#{current_user.name}'s Profile" %></h1><br/>
				<%= current_user.image ? image_tag(current_user.image_url(:thumb)) : "<i class='h-icon-droplet' style='font-size:40px'></i>".html_safe %>
			</div>

			<div class="user-info-section">
				<ul class="nav nav-pills mailMenu">
					<li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Mailboxes<b class="caret"></b></a>
					    <ul class="dropdown-menu">
							<li><%= link_to 'Inbox', '/mail/inbox', class: (params[:action] == 'inbox' ? 'active': '') %></li>
							<li><%= link_to 'Sentbox', '/mail/sentbox', class: (params[:action] == 'inbox' ? 'active': '') %></li>
							<li><%= link_to 'Drafts', '/mail/drafts', class: (params[:action] == 'inbox' ? 'active': '') %></li>
							<li><%= link_to 'Deleted', '/mail/deleted', class: (params[:action] == 'inbox' ? 'active': '') %></li>
					    </ul>
					 </li>
					<li><%= link_to 'New', '/mail/new' %></li>
					<li class="active"><%= link_to 'Existing Conversation', '#' %></li>
					<li><%= link_to 'Templates', '#' %></li>
					<li><%= link_to 'Settings', '#' %></li>
				</ul>
				
		<div class="container">
		<div class="row-fluid">
			<div class="msg-subject">Subjects</div>
			<div class="msg-recipients">Recipients</div>
			<div class="msg-preview">Message</div>
		</div>
		<br />
		<div class="accordion" id="accordion1">
			<% @conversation.messages.each_with_index do |msg,i| %>
				<% if msg.persisted? %>
				  <div class="accordion-group">
		      	<!-- header for collapse -->
				  	<div class="accordion-heading">
				      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse<%=i%>" style="layout:block;">
								<% if i%2 == 0 %>
									<div class="row-fluid" style="background-color:#E8E8FF;padding:8px 0;">
								<% else %>
									<div class="row-fluid" style="background-color:white;padding:8px 0">
								<% end %>
									<div class="span3" style="padding:4px">
										<%= msg.subject %>
									</div>
									<div class="span3" style="padding:4px">
										<%= msg.recipients.map {|usr| usr.email}.join("<br/>").html_safe %>
									</div>
									<div class="span6" style="padding:4px">
										<%#= link_to msg_snippet(msg.body), threads_messages_path(@conversation,msg) %>
										<%= msg_snippet(msg.body) %>
									</div>
					      </a>
					    </div>
						<!-- end header for collapse -->
						<!-- collapse body -->
						<div id="collapse<%=i%>" class="accordion-body collapse out">
							<div class="accordion-inner">
				        <%= msg.body.html_safe %>
				      </div>
						</div>
						<!-- end collapse body -->
					</div>
				<% end %>
			<% end %>
		</div>
		<br />&nbsp;&nbsp;&nbsp;
		<div class="dropdown" style="display:inline-block">
		  <a class="btn dropdown-toggle btn-warning" data-toggle="dropdown" href="#">
		    <i class="h-icon-folder"></i> Move
		    <span class="caret"></span>
		  </a>
		  <ul class="dropdown-menu">
		    <li><a tabindex="-1">Updates</a></li>
		    <li><a tabindex="-1">Thank-Yous</a></li>
		    <li><a tabindex="-1">Questions</a></li>
		    <li><a tabindex="-1">Answers</a></li>
		  </ul>
		</div>
		&nbsp;&nbsp;&nbsp;
		<%= link_to '<i class="h-icon-remove"></i> Delete'.html_safe, '#', class:"btn btn-error" %>
		<%= form_for @new_message, :url => conversation_path(@conversation), :method => :post, class:"form-horizontal" do |f| %>
			<br/>
			<div class="row-fluid">
			<!-- <div class="span3">
				<%#= f.text_field :subject, :placeholder => "Subject" %>
			</div>
			<div class="span3">
				<%#= f.text_field :recipients, :placeholder => "Recipient", :value => '' %>
			</div> -->

			<h3 style="text-align:center">Compose</h3>
			<div class="span8 offset2">
				<%= f.text_area :body, :placeholder => "Body", style:"width:100%;", size:'150x5' %>
			</div> 
			</div>
			<br/><br/><br/><br/>
			<%= button_tag( :class => "btn btn-success") do %>
		 	 <i class="h-icon-bubble"></i> Reply
			<% end %>
		<% end %>
		<!-- <div class="btn-group">
			<%#= link_to '<i class="h-icon-bubbles"></i> Reply to All'.html_safe, '#', class:"btn btn-success" %>
		</div> -->
	</div>
				

			</div>
	</div>
</div></div>